<%= form_with(model: employee, local: true) do |form| %>
<% if employee.errors.any? %>
<div id="error_explanation">
		<h2>
				<%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
		<ul>
				<% employee.errors.full_messages.each do |message| %>
				<li>
						<%= message %>
				</li>
				<% end %>
		</ul>
</div>
<% end %>
<div class="field">
		<%= form.label :last_name %>
		<%= form.text_field :last_name %>
</div>
<div class="field">
		<%= form.label :first_name %>
		<%= form.text_field :first_name %>
</div>
<div class="field">
		<%= form.label :birth_date %>
		<%= form.date_select :birth_date, start_year: Date.today.year - 110, end_year: Date.today.year %>
</div>
<div class="field">
		<%= form.label :designation %>
		<%= form.text_field :designation %>
</div>
<div class="field">
		<%= form.label :department %>
		<%= form.text_field :department %>
</div>
<div class="field">
		<%= form.label :hiring_date %>
		<%= form.date_select :hiring_date %>
</div>
<div class="field">
		<%= form.label :salary %>
		<%= form.number_field :salary %>
</div>
<div class="field">
		<%= form.label :role %>
		<%= form.collection_select :hierarchy_id, Hierarchy.order(:name), :id, :name, :include_blank => true %>
</div>
<div class="field">
		<%= form.label :reports_to %>
		<%= form.collection_select :parent_id, Hierarchy.order(:name), :id, :name, :include_blank => true %>
</div>
<div class="field">
		<%= form.label :is_supervising %>
		<%= form.collection_select :child_id, Hierarchy.order(:name), :id, :name, :include_blank => true %>
</div>
<div class="actions">
		<%= form.submit %>
</div>
<% end %>